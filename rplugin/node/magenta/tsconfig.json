{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
