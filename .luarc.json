{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "#comment": "no globbing, see https://luals.github.io/wiki/settings/#workspacelibrary",
    "library": [
      "./lua",
      "./deps/nui.nvim/lua/",
      "./deps/plenary.nvim/lua/"
